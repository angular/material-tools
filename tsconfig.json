{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "typeRoots": ["./node_modules/@types"],
    "types": [
      "clean-css",
      "es6-promise",
      "fs-extra",
      "node",
      "source-map",
      "uglify-js",
      "yargs",
      "jasmine"
    ]
  },
  "filesGlob": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "tests"
  ]
}
